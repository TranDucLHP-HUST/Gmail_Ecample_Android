<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/round_background"
        android:text="A"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"/>
    <TextView
        android:id="@+id/caption"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="abc"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/img"
        android:layout_marginLeft="90dp" />
    <TextView
        android:id="@+id/content1"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="abc abc abc"
        android:textSize="15dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignLeft="@id/img"
        android:layout_marginLeft="90dp"
        android:layout_alignTop="@id/caption"
        android:layout_marginTop="36dp"/>
    <TextView
        android:id="@+id/content2"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="abc abc abc"
        android:textSize="15dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignLeft="@id/img"
        android:layout_marginLeft="90dp"
        android:layout_alignTop="@id/caption"
        android:layout_marginTop="55dp"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="19:00 AM"
        android:textSize="10dp"
        android:layout_alignLeft="@id/caption"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/star"
        android:layout_alignTop="@id/time"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/content1"
        android:layout_marginLeft="220dp"
        android:src="@drawable/ic_star_normal" />
</RelativeLayout>